{
  "name": "dispense",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "dispense/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run build.go && cp ../dist/dispense/dispense-linux-amd64 ../dist/dispense/dispense",
        "cwd": "dispense"
      }
    },
    "build-with-daemon": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run build.go",
        "cwd": "dispense"
      }
    },
    "build-linux-amd64": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p ../dist/dispense && GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build -o ../dist/dispense/dispense-linux-amd64 ./cmd/*.go",
        "cwd": "dispense"
      }
    },
    "build-darwin-arm64": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p ../dist/dispense && GOOS=darwin GOARCH=arm64 CGO_ENABLED=0 go build -o ../dist/dispense/dispense-darwin-arm64 ./cmd/*.go",
        "cwd": "dispense"
      }
    },
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run build.go",
        "cwd": "dispense"
      },
      "dependsOn": ["build-linux-amd64", "build-darwin-arm64"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/*.go {args}",
        "cwd": "dispense"
      }
    },
    "server": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run ./cmd/*.go mcp --debug",
        "cwd": "dispense"
      },
      "configurations": {
        "debug": {
          "command": "go run ./cmd/*.go mcp --debug --log-level debug"
        },
        "production": {
          "command": "../dist/dispense/dispense mcp"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "dispense"
      }
    },
    "mod-init": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod init dispense",
        "cwd": "dispense"
      }
    }
  },
  "tags": []
}